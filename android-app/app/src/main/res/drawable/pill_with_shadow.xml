<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-12"
    android:toDegrees="-12"
    android:pivotX="50%"
    android:pivotY="50%">

    <layer-list>

        <item android:top="6dp">
            <shape android:shape="rectangle">
                <size android:width="160dp" android:height="76dp"/>
                <solid android:color="#22000000"/>
                <corners android:radius="38dp"/>
            </shape>
        </item>

        <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="6dp">
            <shape android:shape="rectangle">
                <size android:width="140dp" android:height="70dp"/>
                <gradient
                    android:angle="330"
                    android:startColor="#FFFFFFFF"
                    android:centerColor="#F0F7FF"
                    android:endColor="#E6F0FF"
                    android:type="linear"/>
                <corners android:radius="35dp"/>
                <stroke android:width="1dp" android:color="#20FFFFFF"/>
            </shape>
        </item>

    </layer-list>
</rotate>
