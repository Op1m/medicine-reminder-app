<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diary_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    tools:context=".ui.main.DiaryFragment">

    <LinearLayout
        android:id="@+id/top_section"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">

            <TextView
                android:id="@+id/tv_month_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ноябрь, 2025"
                android:textSize="18sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/iv_month_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"
                android:tint="#333333" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/hsv_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="6dp">

            <LinearLayout
                android:id="@+id/week_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical" />
        </HorizontalScrollView>

        <View
            android:id="@+id/divider_below_week"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="#E0E0E0" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/schedule_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/schedule_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp" />

    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/fl_floating_add_btn"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:paddingBottom="40dp"
        android:paddingTop="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:layout_marginBottom="0dp"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_add_prep_inside_scroll"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="70dp"
            android:layout_gravity="bottom"
            android:text="Добавить препарат"
            android:fontFamily="@font/fira_sans"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/btn_primary"
            android:gravity="center" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/empty_state_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginBottom="70dp">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_medcase"
            android:tint="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Здесь будут препараты, которые"
            android:textColor="#777"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="вы принимаете."
            android:textColor="#777"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>

</FrameLayout>
