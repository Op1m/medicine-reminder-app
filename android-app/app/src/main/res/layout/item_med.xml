<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/med_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/med_card_bg"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/med_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_pill"
        android:tint="#B0CFFB"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/med_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название препарата"
            android:textStyle="bold"
            android:textColor="#263238"
            android:fontFamily="@font/fira_sans"/>

        <TextView
            android:id="@+id/med_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 таб. во время еды"
            android:textColor="#8FA9C6"
            android:textSize="12sp"
            android:fontFamily="@font/fira_sans"/>
    </LinearLayout>

    <TextView
        android:id="@+id/med_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Принято"
        android:textColor="#2E86FF"
        android:textSize="12sp"
        android:visibility="gone"/>
</LinearLayout>
