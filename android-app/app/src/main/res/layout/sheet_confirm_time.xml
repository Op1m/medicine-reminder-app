<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheet_confirm_time_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:background="@drawable/rounded_sheet_bg">

    <TextView
        android:id="@+id/sheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Когда вы приняли препараты?"
        android:textSize="16sp"
        android:textColor="#263238"
        android:gravity="center"
        android:fontFamily="@font/fira_sans"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>

    <LinearLayout
        android:id="@+id/sheet_time_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/sheet_btn_now"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:text="Сейчас"
            android:fontFamily="@font/fira_sans"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/sheet_button_primary"
            android:textColor="#0A84FF" />

        <Button
            android:id="@+id/sheet_btn_schedule"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:text="По расписанию"
            android:fontFamily="@font/fira_sans"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/sheet_button_secondary"
            android:textColor="#263238" />

        <Button
            android:id="@+id/sheet_btn_time"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:text="Время"
            android:fontFamily="@font/fira_sans"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/sheet_button_secondary"
            android:textColor="#263238" />
    </LinearLayout>

    <Button
        android:id="@+id/sheet_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="6dp"
        android:text="Отменить"
        android:fontFamily="@font/fira_sans"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:background="@drawable/sheet_button_cancel"
        android:textColor="#263238" />
</LinearLayout>
