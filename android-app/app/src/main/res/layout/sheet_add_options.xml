<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheet_add_options_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:background="@drawable/rounded_sheet_bg">

    <Button
        android:id="@+id/sheet_btn_new_med"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Новый препарат"
        android:fontFamily="@font/fira_sans"
        android:textSize="16sp"
        android:background="@drawable/sheet_button_primary"
        android:textColor="#0A84FF"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/sheet_btn_new_course"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:text="Новый курс"
        android:fontFamily="@font/fira_sans"
        android:textSize="16sp"
        android:background="@drawable/sheet_button_secondary"
        android:textColor="#263238"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/sheet_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:text="Отменить"
        android:fontFamily="@font/fira_sans"
        android:textSize="16sp"
        android:background="@drawable/sheet_button_cancel"
        android:textColor="#263238"
        android:textAllCaps="false"/>
</LinearLayout>
