<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_step2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_panel"
        android:layout_width="376dp"
        android:layout_height="101dp"
        android:layout_marginStart="-16dp"
        android:layout_marginEnd="-16dp"
        android:background="@drawable/top_panel_bg"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/btn_back_bg_rounded"
            android:contentDescription="Назад"
            android:padding="6dp"
            app:srcCompat="@drawable/ic_arrow_back"
            app:tint="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/top_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/fira_sans"
            android:gravity="center"
            android:text="Новый пользователь"
            android:textColor="#263238"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/iv_avatar_preview"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/avatar_preview_border"
        android:contentDescription="Превью аватара"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_preview_combo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_panel" />

    <HorizontalScrollView
        android:id="@+id/hsv_avatars"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/ll_avatars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/avatar_1"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginEnd="11dp"
                android:src="@drawable/ic_avatar_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/avatar_selector"
                android:contentDescription="avatar1"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/avatar_2"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginEnd="11dp"
                android:src="@drawable/ic_avatar_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/avatar_selector"
                android:contentDescription="avatar2"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/avatar_3"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginEnd="11dp"
                android:src="@drawable/ic_avatar_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/avatar_selector"
                android:contentDescription="avatar3"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/avatar_4"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginEnd="11dp"
                android:src="@drawable/ic_avatar_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/avatar_selector"
                android:contentDescription="avatar4"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/avatar_5"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginEnd="11dp"
                android:src="@drawable/ic_avatar_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/avatar_selector"
                android:contentDescription="avatar5"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center"/>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fira_sans"
        android:text="Имя"
        android:textColor="#263238"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/hsv_avatars" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg_selector"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="Введите имя"
        android:textColor="#263238"
        android:textSize="15sp"
        android:fontFamily="@font/fira_sans"
        app:layout_constraintTop_toBottomOf="@id/label_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/label_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fira_sans"
        android:text="Логин"
        android:textColor="#263238"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="12dp"
        app:layout_constraintTop_toBottomOf="@+id/et_name" />

    <EditText
        android:id="@+id/et_login"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg_selector"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="Введите логин"
        android:textColor="#263238"
        android:textSize="15sp"
        android:fontFamily="@font/fira_sans"
        app:layout_constraintTop_toBottomOf="@id/label_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fira_sans"
        android:text="Email"
        android:textColor="#263238"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="12dp"
        app:layout_constraintTop_toBottomOf="@+id/et_login" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg_selector"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="Введите email"
        android:textColor="#263238"
        android:textSize="15sp"
        android:fontFamily="@font/fira_sans"
        app:layout_constraintTop_toBottomOf="@id/label_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/label_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fira_sans"
        android:text="Пароль"
        android:textColor="#263238"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="12dp"
        app:layout_constraintTop_toBottomOf="@+id/et_email" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg_selector"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="Введите пароль"
        android:textColor="#263238"
        android:textSize="15sp"
        android:fontFamily="@font/fira_sans"
        app:layout_constraintTop_toBottomOf="@id/label_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/label_dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fira_sans"
        android:text="Дата рождения"
        android:textColor="#263238"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="12dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />

    <EditText
        android:id="@+id/et_dob"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg_selector"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="ДД.ММ.ГГГГ"
        android:textColor="#263238"
        android:textSize="15sp"
        android:fontFamily="@font/fira_sans"
        app:layout_constraintTop_toBottomOf="@id/label_dob"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_user"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:text="Создать пользователя"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:fontFamily="@font/fira_sans"
        app:cornerRadius="10dp"
        app:backgroundTint="@null"
        android:background="@drawable/btn_primary"
        app:layout_constraintTop_toBottomOf="@id/et_dob"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
