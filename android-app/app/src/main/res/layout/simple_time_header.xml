<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simple_time_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="12dp"
    android:paddingEnd="0dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/header_time_text"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:text="08:30"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/fira_sans"
        android:textColor="#263238" />

    <ImageView
        android:id="@+id/header_arrow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="0.7dp"
        android:contentDescription="Toggle"
        android:padding="0dp"
        android:src="@drawable/ic_arrow_down" />

    <Button
        android:id="@+id/header_accept_all"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:layout_marginLeft="170dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:background="@drawable/btn_primary_small"
        android:fontFamily="@font/fira_sans"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Принять все"
        android:textAllCaps="false"
        android:textColor="#49494b"
        android:textSize="12sp" />


</LinearLayout>
