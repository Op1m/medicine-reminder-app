<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:background="@drawable/week_day_bg_selected">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_prev_month"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="prev"
            app:tint="#263238"/>

        <TextView
            android:id="@+id/popup_month_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/fira_sans"
            android:text="Ноябрь 2025"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#263238"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/btn_prev_month"
            app:layout_constraintEnd_toStartOf="@id/btn_next_month"/>

        <ImageView
            android:id="@+id/btn_next_month"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_arrow_right"
            android:contentDescription="next"
            app:tint="#263238"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/day_names"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="пн" android:gravity="center" android:fontFamily="@font/fira_sans" android:textSize="12sp" android:textColor="#9AA7B2"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="вт" android:gravity="center" android:fontFamily="@font/fira_sans" android:textSize="12sp" android:textColor="#9AA7B2"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="ср" android:gravity="center" android:fontFamily="@font/fira_sans" android:textSize="12sp" android:textColor="#9AA7B2"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="чт" android:gravity="center" android:fontFamily="@font/fira_sans" android:textSize="12sp" android:textColor="#9AA7B2"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="пт" android:gravity="center" android:fontFamily="@font/fira_sans" android:textSize="12sp" android:textColor="#9AA7B2"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="сб" android:gravity="center" android:fontFamily="@font/fira_sans" android:textSize="12sp" android:textColor="#9AA7B2"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="вс" android:gravity="center" android:fontFamily="@font/fira_sans" android:textSize="12sp" android:textColor="#9AA7B2"/>
    </LinearLayout>

    <GridLayout
        android:id="@+id/grid_dates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="7"
        android:useDefaultMargins="false"
        android:alignmentMode="alignMargins"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/day_names"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
