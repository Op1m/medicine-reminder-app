<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheet_confirm_options_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:background="@drawable/rounded_sheet_bg">

    <TextView
        android:id="@+id/sheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Принять все препараты"
        android:textSize="16sp"
        android:textColor="#263238"
        android:gravity="center"
        android:fontFamily="@font/fira_sans"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>

    <LinearLayout
        android:id="@+id/sheet_group_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:weightSum="3">

        <Button
            android:id="@+id/sheet_btn_accept"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Принять все"
            android:fontFamily="@font/fira_sans"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/sheet_button_primary"
            android:textColor="#0A84FF" />

        <View
            android:layout_width="8dp"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/sheet_btn_skip"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Пропустить все"
            android:textAllCaps="false"
            android:fontFamily="@font/fira_sans"
            android:textSize="16sp"
            android:background="@drawable/sheet_button_secondary"
            android:textColor="#263238" />

        <View
            android:layout_width="8dp"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/sheet_btn_move"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Перенести все"
            android:textAllCaps="false"
            android:fontFamily="@font/fira_sans"
            android:textSize="16sp"
            android:background="@drawable/sheet_button_secondary"
            android:textColor="#263238" />
    </LinearLayout>

    <Button
        android:id="@+id/sheet_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:text="Отменить"
        android:textAllCaps="false"
        android:fontFamily="@font/fira_sans"
        android:textSize="16sp"
        android:background="@drawable/sheet_button_cancel"
        android:textColor="#263238" />
</LinearLayout>
