<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_step2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_panel"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/top_panel_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/top_iv_avatar_preview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="44dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/avatar_preview_border"
            android:contentDescription="Превью аватара"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_preview_combo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/top_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/fira_sans"
            android:text="Имя пользователя"
            android:textColor="#263238"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/top_iv_avatar_preview"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/top_change_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/fira_sans"
            android:text="Сменить пользователя"
            android:textColor="#9AA7B2"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/top_iv_avatar_preview"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_panel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include
        android:id="@+id/include_left_nav"
        layout="@layout/left_bottom_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="35dp"/>

    <ImageView
        android:id="@+id/btn_right_plus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Добавить"
        android:scaleType="center"
        android:padding="0dp"
        android:background="@drawable/plus_button_bg_white"
        app:layout_constraintStart_toEndOf="@id/include_left_nav"
        app:layout_constraintBottom_toBottomOf="@id/include_left_nav"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="-2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
